<?php
/**
 * @file
 * Provides install, updated, and uninstall functions for picatcha.
 */

/**
 * Implements hook_uninstall().
 */
function picatcha_uninstall() {
  // Delete all the Picatcha variables and then clear the variable cache
  db_delete('variable')
    ->condition('name', 'picatcha_%', 'LIKE')
    ->execute();
  cache_clear_all('variables', 'cache');
}
